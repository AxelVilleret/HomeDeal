<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.newdeal.NewDealFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/message"
            android:id="@+id/message_newdeal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <EditText
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:id="@+id/newdeal_name"
                android:layout_marginTop="30dp"
                android:background="@drawable/border_black"
                android:padding="8dp"
                android:hint="Nom du deal"
                android:drawablePadding="8dp"
                android:textColor="@color/grey"/>

            <EditText
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:id="@+id/newdeal_description"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_black"
                android:padding="8dp"
                android:gravity="top"
                android:hint="Description"
                android:drawablePadding="8dp"
                android:textColor="@color/grey"/>
            <TextView
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:id="@+id/newdeal_date"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_black"
                android:padding="8dp"
                android:text="dd/mm/yyyy"
                android:drawableRight="@drawable/ic_baseline_calendar_month_24"
                android:drawablePadding="8dp"
                android:textColor="@color/grey"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_vertical"/>

            <EditText
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:id="@+id/newdeal_link"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_black"
                android:padding="8dp"
                android:hint="Lien du deal"
                android:drawablePadding="8dp"
                android:textColor="@color/grey"/>
            <EditText
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:id="@+id/newdeal_image"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_black"
                android:padding="8dp"
                android:hint="Lien de l'image"
                android:drawablePadding="8dp"
                android:textColor="@color/grey"/>

            <EditText
                android:id="@+id/newdeal_price"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_black"
                android:drawablePadding="8dp"
                android:hint="Prix du deal (â‚¬)"
                android:inputType="numberDecimal"
                android:padding="8dp"
                android:textColor="@color/grey" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="60dp"
                android:text="Ajouter"
                android:id="@+id/newdeal_button"
                android:textSize="18sp"
                app:cornerRadius = "30dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>